@model EmployeeManagement.Common.VModels.WorkOrderVM

@{
    ViewData["Title"] = "Create";
}

<form class="form-horizontal" asp-controller="WorkOrder" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="WorkOrderPoint">İş Emri Puanı</label>
        <div class="col-sm-9">
            <input asp-for="WorkOrderPoint" type="number" min="0" max="15" id="form-field-1" placeholder="İş Emri Puanı" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="WorkOrderPoint" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="WorkOrderDescription">İş Emri Açıklaması</label>
        <div class="col-sm-9">
            <textarea class="form-control" asp-for="WorkOrderDescription" maxlength="2750"></textarea>
            <span asp-validation-for="WorkOrderDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="PhotoPath">Fotoğraf</label>
        <div class="col-sm-9 custom-file">
            <input asp-for="PhotoPath" class="col-xs-10 col-sm-5 custom-file-input form-control" id="form-field-2" placeholder="Fotoğraf Seçiniz" />
            <span asp-validation-for="PhotoPath" class="text-danger"></span>
        </div>
    </div>
    <custom-list></custom-list>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="İş Emri Oluştur" class="btn btn-info col-xs-3" />
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/jquery.inputlimiter.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('textarea').inputlimiter({
                remText: '%n karakter %s kaldı...',
                limitText: 'Maksimum limit: %n.'
            });
        });
    </script>
}